@model IEnumerable<WShop.EFModel.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01">
        <a class="back" onClick="javascript:history.back(-1);"><img src="/Content/Images/icon_03.png"></a>
        <div>
            <input type="text" placeholder="请输入您要搜索的产品">
            <input class="dw" onclick="document.location='search_list.html'" type="button" value=""></div>
    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop开始--> 
<div class="search_list">
    <p><a class="on"><span>综合</span></a><a><span>销量</span></a><a><span>评价</span></a><a><span class="bg">价格</span></a></p>
    <ul>
        @foreach (var prod in Model)
        {
            <li><a href="@Url.Action("ProductDet","Product",new {prod.Code})"><img src="@prod.ProPhotes.First().ImgUrl">
                <div class="search_item">
                    <p>@prod.Name</p>
                    <h2><i>￥</i><b>@prod.SellPrice</b><span>月销18252笔</span>
                    </h2>
                </div>
            </a></li>
        }
    </ul>
</div>


@section style
{
    @*<link href="/Content/css/Cbase.css" type="text/css" rel="stylesheet">*@
}
@section Script
{
    <script src="/Scripts/index.js" type="text/javascript"></script>
    <script>
        $(".search_list ul li a img").each(function(){
            var w = $(this).width();
            $(this).height(w+"px");
        })

    </script>
}


