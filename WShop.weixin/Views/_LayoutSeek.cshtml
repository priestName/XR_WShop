@using System.Activities.Expressions
@{
    Layout = "_LayoutMaster.cshtml";
}
@section style
{
    @RenderSection("style", false)
}
@section Script
{
    @RenderSection("Script", false)
    <script>
        $(".dw").click(function() {
            var key = $(".key").val();
            document.location = "@Url.Action("Index","Product")?i=0&&Code=" + key;
        })
    </script>
}


<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01">
        <a class="back" onClick="javascript:history.back(-1);"><img src="/Content/Images/icon_03.png"></a>
        <div>
            <input type="text" class="key" placeholder="请输入您要搜索的产品">
            <input class="dw" type="button" value="">
        </div>
    </div>
    <div style="clear: both;"></div>
</div>
@RenderBody()
